@model RimansaRealEstate.Models.Property

@{
    ViewData["Title"] = "Eliminar Propiedad";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Eliminar Propiedad
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>¡Atención!</strong> Esta acción no se puede deshacer. ¿Estás seguro que deseas eliminar esta propiedad?
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>ID:</strong> #@Model.Id
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Creación:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Título:</strong>
                        <p class="text-muted">@Model.Title</p>
                    </div>

                    <div class="mb-3">
                        <strong>Descripción:</strong>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Precio:</strong>
                            <p class="text-success fw-bold">$@Model.Price.ToString("N0")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Ubicación:</strong>
                            <p class="text-muted"><i class="fas fa-map-marker-alt"></i> @Model.Location</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Tipo:</strong>
                            <p><span class="badge bg-secondary">@Model.Type</span></p>
                        </div>
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                            <p>
                                @if (Model.Status == RimansaRealEstate.Models.PropertyStatus.Venta)
                                {
                                    <span class="badge bg-danger">Venta</span>
                                }
                                else if (Model.Status == RimansaRealEstate.Models.PropertyStatus.Alquiler)
                                {
                                    <span class="badge bg-info">Alquiler</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (Model.Bedrooms.HasValue || Model.Bathrooms.HasValue || Model.AreaSquareMeters.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Características:</strong>
                            <p class="text-muted">
                                @if (Model.Bedrooms.HasValue)
                                {
                                    <span class="me-3"><i class="fas fa-bed"></i> @Model.Bedrooms Habitaciones</span>
                                }
                                @if (Model.Bathrooms.HasValue)
                                {
                                    <span class="me-3"><i class="fas fa-bath"></i> @Model.Bathrooms Baños</span>
                                }
                                @if (Model.AreaSquareMeters.HasValue)
                                {
                                    <span><i class="fas fa-ruler-combined"></i> @Model.AreaSquareMeters m²</span>
                                }
                            </p>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>