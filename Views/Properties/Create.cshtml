@model RimansaRealEstate.Models.Property

@{
    ViewData["Title"] = "Nueva Propiedad";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Nueva Propiedad
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="col-md-12">
                            <label class="form-label">Título</label>
                            <input asp-for="Title" class="form-control"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Precio</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control"/>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Ubicación</label>
                            <input asp-for="Location" class="form-control"/>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Tipo</label>
                            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<RimansaRealEstate.Models.PropertyType>()">
                                <option value="">-- Seleccionar Tipo --</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Estado</label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<RimansaRealEstate.Models.PropertyStatus>()">
                                <option value="">-- Seleccionar Estado --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Bedrooms" class="form-label">
                                    <i class="fas fa-bed"></i> Habitaciones
                                </label>
                                <input asp-for="Bedrooms" class="form-control" type="number" min="0" placeholder="3" />
                                <span asp-validation-for="Bedrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Bathrooms" class="form-label">
                                    <i class="fas fa-bath"></i> Baños
                                </label>
                                <input asp-for="Bathrooms" class="form-control" type="number" min="0" placeholder="2" />
                                <span asp-validation-for="Bathrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="AreaSquareMeters" class="form-label">
                                    <i class="fas fa-ruler-combined"></i> Área (m²)
                                </label>
                                <input asp-for="AreaSquareMeters" class="form-control" type="number" step="0.01" min="0" placeholder="180" />
                                <span asp-validation-for="AreaSquareMeters" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-image"></i> URL de Imagen
                            </label>
                            <input asp-for="ImageUrl" class="form-control"/>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Opcional: URL o ruta de la imagen principal
                            </small>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label class="form-check-label">
                                    Propiedad Activa (Visible en el sitio público)
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save"></i> Crear Propiedad
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}