@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="py-5">
                <i class="fas fa-exclamation-triangle" style="font-size: 5rem; color: #e63946;"></i>
                <h1 class="mt-4 fw-bold" style="color: #1e3a5f;">¡Oops! Algo salió mal</h1>
                <p class="lead text-muted">Lo sentimos, ha ocurrido un error inesperado.</p>

                @if (Model?.ShowRequestId ?? false)
                {
                    <div class="alert alert-light mt-4">
                        <p class="mb-0">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    </div>
                }

                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-danger me-2">
                        <i class="fas fa-home"></i> Volver al Inicio
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Volver Atrás
                    </button>
                </div>

                <div class="mt-5 text-muted">
                    <p class="small">
                        Si el problema persiste, por favor contacta a nuestro equipo de soporte.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>